<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.sujeet.priceedittext.PriceEditText
        android:id="@+id/price_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:hint="@string/enter_amount"
        android:padding="@dimen/padding_10"
        android:inputType="numberDecimal"
        android:textColorHint="@android:color/secondary_text_dark_nodisable"
        app:currency="$" />

    <com.sujeet.priceedittext.PercentageEditText
        android:id="@+id/percentage_edit_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:hint="@string/enter_percentage"
        android:padding="@dimen/padding_10"
        android:inputType="numberDecimal"
        android:textColorHint="@android:color/secondary_text_dark_nodisable" />
</LinearLayout>
